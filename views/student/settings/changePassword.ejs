<%- include('../../includes/header.ejs') %>
<link rel="stylesheet" href="/css/changePassword.css">
<link rel="stylesheet" href="/css/ripple.css">
</head>

<body>
    <header>
        <div class="img-forg"></div>
        <img src="/images/analytics-back.svg" class="back-img">
        <img src="<%= curr_avatar %>" class="avatar">
        <h3 class="name"><%= name  %></h3>
        <h3 class="email"><%= email %></h3>
        <img class="left-arrow" onclick="goBack()" src="/images/left-arrow.svg">
    </header>

    <main class="changePassword">
        <form action="/student/settings/changePassword" method="POST">
            <input type="password" name="oldPassword" id="oldPassword" required placeholder="Old Password">
            <input type="password" name="newPassword" id="newPassword" required placeholder="New Password">
            <button type="submit" class="changePassword__btn ripple">Change</button>
            <input type="hidden" value="<%= csrfToken %>" name="_csrf">
        </form>
    </main>
    <script>
        function goBack() {
            window.history.back();
        }
    </script>
    <%- include('../../includes/footer.ejs') %>