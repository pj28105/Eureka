<%- include('../../includes/header.ejs') %>
<link rel="stylesheet" href="/css/feedback.css">
<link rel="stylesheet" href="/css/ripple.css">
</head>

<body>
    <header>
        <div class="img-forg"></div>
        <img src="/images/analytics-back.svg" class="back-img">
        <img src="<%= curr_avatar %>" class="avatar">
        <h3 class="name"><%= name  %></h3>
        <h3 class="email"><%= email %></h3>
        <img class="left-arrow" onclick="goBack()" src="/images/left-arrow.svg">
    </header>

    <main class="feedback">
        <form action="/settings/feedback" method="post">
            <input type="text" name="subject" id="subject" placeholder="Subject">
            <textarea name="feedback" class="feedback__text" placeholder="Message"></textarea>
            <button type="submit" class="feedback__btn ripple">Submit</button>
            <input type="hidden" value="<%= csrfToken %>" name="_csrf">
        </form>
    </main>
    <script>
        function goBack() {
            window.history.back();
        }
    </script>
    <%- include('../../includes/footer.ejs') %>